@using Todo.Web.Models.Auth
@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@Localizer["RegisterTitle"]</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../vendors/feather/feather.css">
    <link rel="stylesheet" href="../../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../../css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../../images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="../../images/logo.svg" alt="logo">
                            </div>
                            <h4>@Localizer["NewHere"]</h4>
                            <h6 class="font-weight-light">@Localizer["SignUpText"]</h6>
                            <form class="pt-3" asp-action="Register" method="POST">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="Name" placeholder="@Localizer["Name"]">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="Surname" placeholder="@Localizer["Surname"]">
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="UserName" placeholder="@Localizer["UserName"]">
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" asp-for="EMail" placeholder="@Localizer["Email"]">
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" asp-for="Password" placeholder="@Localizer["Password"]" required>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="OrganizationName" placeholder="@Localizer["OrgName"]" required>
                                </div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input" required>
                                            @Localizer["TermsAndConditions"]
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">@Localizer["SignUpUpper"]</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    @Localizer["AlreadyAccount"] <a asp-controller="Auth" asp-action="Login" class="text-primary">@Localizer["LoginAA"]</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../js/off-canvas.js"></script>
    <script src="../../js/hoverable-collapse.js"></script>
    <script src="../../js/template.js"></script>
    <script src="../../js/settings.js"></script>
    <script src="../../js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>
