@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="card-title mb-0">@Localizer["OrganizationList"]</h4>

                    <a href="@Url.Action("Add", "Organization")" class="btn btn-primary btn-sm">
                        <i class="ti-plus"></i> @Localizer["AddRecord"]
                    </a>
                </div>

                <div class="table-responsive">
                    <table id="organizationTable" class="table table-striped table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>@Localizer["Name"]</th>
                                <th>@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/pages/organizations/js/index.js"></script>
}