<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="card-title mb-0">@Localizer["OrganizationList"]</h4>

                    <a href="@Url.Action("Add", "Organization")"
                       class="btn btn-sm btn-success">
                        <i class="ti-plus"></i> @Localizer["AddRecord"]
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover" id="organizationTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Actions</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="organizationTableBody">
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>


